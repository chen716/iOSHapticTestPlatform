{
    "$schema":"http://json-schema.org/draft/2019-09/schema",
    "required":[
       "email",
       "experiment_description",
       "haptic_setup"
    ],
    "properties":{
       "email":{
          "type":"string",
          "format":"email"
       },
       "experiment_id":{
          "type":"string"
       },
       "creation_datetime":{
          "type":"string",
          "format":"date-time"
       },
       "experiment_description":{
          "type":"string"
       },
       "haptic_setup":{
          "type":"object",
          "required":[
             "survey_url",
             "user_instructions",
             "user_agreements",
             "interaction_type",
             "linked_files"
          ],
          "properties":{
             "survey_url":{
                "type":"string",
                "format":"uri-reference"
             },
             "user_instructions":{
                "type":"string"
             },
             "user_agreements":{
                "type":"array",
                "items":{
                   "type":"string",
                   "title":"A Schema"
                }
             },
             "interaction_type":{
                "type":"string",
                "enum":[
                   "swipe",
                   "tap",
                   "doubletap"
                ]
             },
             "linked_files":{
                "type":"object",
                "required":[
                   "long_effect",
                   "short_effect",
                   "instruction_image"
                ],
                "properties":{
                   "long_effect":{
                      "type":"string"
                   },
                   "long_audio":{
                      "type":"string"
                   },
                   "short_audio":{
                      "type":"string"
                   },
                   "short_effect":{
                      "type":"string"
                   },
                   "instruction_image":{
                      "type":"string"
                   }
                }
             }
          }
       }
    }
 }